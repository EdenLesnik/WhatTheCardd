{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Output Settings */
    "outDir": "./dist", 
    "declaration": true,  
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,  // Keeps only type declarations

    /* Module Resolution */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,  // This works with emitDeclarationOnly

    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Node Types */
    "types": ["node"]
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
